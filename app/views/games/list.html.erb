<h1>Listing games</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>English description</th>
      <th>Portuguese description</th>
      <th>Boxshot</th>
      <th>Released</th>
      <th>Sku</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.english_description %></td>
        <td><%= game.portuguese_description %></td>
        <td><%= game.boxshot %></td>
        <td><%= game.released %></td>
        <td><%= game.sku %></td>
        <td><%= game.category %></td>
        <td><%= link_to 'Show', game %></td>
      </tr>
    <% end %>
  </tbody>
</table>
