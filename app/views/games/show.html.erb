

<div class="container">

  <div class="row">

    <div class="col-sm-6">
      <%= image_tag(@game.boxshot,class: 'img-responsive img-rounded')%>
    </div>

    <div class="col-sm-6">
    <p>
      <strong>Name:</strong>
      <%= @game.name %>
    </p>

    <p>
      <strong><%= t :description%></strong>
        <%if cookies[:locale] == 'pt'%>
         <%= @game.portuguese_description %>
        <%else%>
          <%= @game.english_description %>
        <%end%>
    </p> 

    <p>
      <strong>Released:</strong>
      <%= @game.released %>
    </p>

    <p>
      <strong>Sku:</strong>
      <%= @game.sku %>
    </p>

    <p>
      <strong>Category:</strong>
      <%= Category.find(@game.category).name %>
    </p>

    <% if is_admin? %>
      <%= link_to 'Edit', edit_game_path(@game) %> 
    <%end%>
    <%= link_to 'Back', :back %>
  </div>

</div>
  
  
</div>


